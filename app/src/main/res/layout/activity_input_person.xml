<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.hearc.ig.ta.saisieclient1.InputPersonActivity">

    <Button
        android:text="CrÃ©er"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="onButtonClicked"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Date de naissance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateNaissance"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/Ville"
        android:layout_marginBottom="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editDateNaissance"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:layout_alignBaseline="@+id/DateNaissance"
        android:layout_alignBottom="@+id/DateNaissance"
        android:layout_toEndOf="@+id/DateNaissance" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editVille"
        android:layout_alignBottom="@+id/Ville"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editAdresse"
        android:layout_above="@+id/editVille"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editNom"
        android:inputType="textPersonName"
        android:layout_above="@+id/Prenom"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:id="@+id/Nom"
        android:layout_alignBaseline="@+id/editNom"
        android:layout_alignBottom="@+id/editNom"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editPrenom"
        android:layout_alignTop="@+id/Prenom"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Prenom"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/editAdresse"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Adresse"
        android:layout_alignBaseline="@+id/editAdresse"
        android:layout_alignBottom="@+id/editAdresse" />

    <TextView
        android:text="Ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ville"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/editDateNaissance"
         />

</RelativeLayout>
